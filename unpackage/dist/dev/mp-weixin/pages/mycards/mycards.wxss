.tapSwitch {
  height: 100%;
}
.tapSwitch .no-list {
  padding: 50rpx 0;
  color: #696969;
  text-align: center;
  font-size: 28rpx;
  z-index: 1000;
}
.tapSwitch .top {
  width: 100%;
  height: 6%;
  position: fixed;
}
.tapSwitch .top scroll-view {
  white-space: nowrap;
  height: 100%;
}
.tapSwitch .top scroll-view .item {
