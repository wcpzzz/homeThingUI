  width: 50%;
  height: 100%;
  display: inline-block;
}
.tapSwitch .content {
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  top: 6%;
  color: #FFFFFF;
  background: #FFFFFF;
  white-space: nowrap;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 0 0 0 30rpx;
  width: 100%;
}
